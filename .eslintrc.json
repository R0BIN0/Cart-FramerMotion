{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "no-unused-vars": "warn",
    // "indent": ["error", 2],
    "linebreak-style": [0, "error", "windows"],
    "react/prop-types": 0,
    "quotes": ["error", "double"],
    "semi": ["error", "always"]
  }
}
